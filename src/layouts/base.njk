<!DOCTYPE html>
<html lang="{{ meta.lang or site.lang }}" data-theme="valorant">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ site.title }} - {{ title or meta.title }}</title>
    {% include "meta.njk" %}
    <link rel="stylesheet" href="{{ '/node_modules/notyf/notyf.min.css' | url }}" />
    <link rel="stylesheet" href="{{ '/node_modules/apexcharts/dist/apexcharts.css' | url }}" />
  </head>

  <body>

    {% include "header.njk" %}

    <main id="main" class="max-w-6xl mx-auto px-6">
      <div class="">
        {% if hero_picture %}
          <div class="hero-image mb-8">
            {% image "src/assets/images/" + hero_picture + ".png", title, "100vw" %}
          </div>
        {% endif %}
        {{ content | safe }}
      </div>
    </main>

    {% include "footer.njk" %}

    {% include "chain-modal.njk" %}

    <script type="module" src="{{ '/node_modules/flyonui/flyonui.js' | url }}"></script>
    <script src="{{ '/node_modules/lodash/lodash.js' | url }}"></script>
    <script src="{{ '/node_modules/apexcharts/dist/apexcharts.js' | url }}"></script>
    <script src="{{ '/node_modules/flyonui/dist/helper-apexcharts.js' | url }}"></script>
    <script type="module" src="{{ '/assets/js/index.js' | url }}"></script>
    {# <script src="{{ '/node_modules/flyonui/accordion.js' | url }}"></script> #}
  </body>
</html>
