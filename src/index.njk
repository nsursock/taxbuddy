        <button type="button" class="btn btn-outline btn-primary w-full" @click="$store.wallet.connectSolana(); HSOverlay.close('#wallet-modal'); window.location.href='/dashboard'">Solana</button>
        <button type="button" class="btn btn-outline btn-primary w-full" @click="$store.wallet.connectEthereum('Ethereum'); HSOverlay.close('#wallet-modal'); window.location.href='/dashboard'">Ethereum</button>
